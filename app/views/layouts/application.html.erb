<!DOCTYPE html>
<html>
  <head>
    <title>おかりなのブログ</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body class="bg-background-light dark:bg-background-dark text-text-light dark:text-text-dark min-h-screen flex flex-col">
    <%= render "shared/header" %>

    <!-- ページコンテンツ -->
    <main class="flex-grow container mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <h2 class="text-2xl font-bold mb-6"><%= content_for?(:page_title) ? yield(:page_title) : "Home" %></h2>
      <%= yield %>
    </main>

    <%= render "shared/footer" %>
  </body>
</html>

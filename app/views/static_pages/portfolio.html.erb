<div class="min-h-screen bg-background-light dark:bg-background-dark text-text-light dark:text-text-dark py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-5xl mx-auto">
    <h1 class="text-3xl font-bold text-center mb-10 text-primary">ポートフォリオ</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <% @projects.each do |project| %>
        <div class="card bg-base-100 shadow-xl hover:scale-[1.02] transition-transform">
          <figure>
            <img src="<%= asset_path(project[:image]) %>" alt="<%= project[:title] %>" class="object-cover h-48 w-full"/>
          </figure>
          <div class="card-body">
            <h2 class="card-title text-secondary"><%= project[:title] %></h2>
            <p><%= project[:description] %></p>
            <div class="card-actions justify-end mt-4">
              <%= link_to "GitHub", project[:github_url], class: "btn btn-outline btn-primary", target: "_blank" %>
              <%= link_to "サイトを見る", project[:site_url], class: "btn btn-primary", target: "_blank" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="min-h-screen bg-background-light dark:bg-background-dark text-text-light dark:text-text-dark py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-3xl mx-auto bg-white dark:bg-gray-800 shadow-lg rounded-xl p-8 space-y-8 border border-accent/40">
    
    <div class="flex flex-col items-center">
      <div class="avatar mb-4">
        <div class="w-32 rounded-full ring ring-accent ring-offset-base-100 ring-offset-2">
          <img src="<%= asset_path('my_icon.jpg') %>" alt="おかりなのアイコン" />
        </div>
      </div>
      <h1 class="text-2xl font-bold text-primary mb-2"><%= @name %></h1>
      <p class="text-gray-500 dark:text-gray-300 text-sm">生年月日: <%= @age %></p>
    </div>

    <section>
      <h2 class="text-xl font-semibold text-accent border-b border-accent/50 pb-2 mb-4">経歴</h2>
      <ul class="list-disc pl-5 space-y-1 text-gray-700 dark:text-gray-300">
        <% @history.each do |item| %>
          <li><%= item %></li>
        <% end %>
      </ul>
    </section>

    <section>
      <h2 class="text-xl font-semibold text-accent border-b border-accent/50 pb-2 mb-4">趣味</h2>
      <div class="flex flex-wrap gap-3">
        <% @hobby.each do |h| %>
          <span class="px-4 py-2 bg-accent/20 dark:bg-accent/30 text-sm rounded-full">
            <%= h %>
          </span>
        <% end %>
      </div>
    </section>

    <section>
      <h2 class="text-xl font-semibold text-accent border-b border-accent/50 pb-2 mb-4">エンジニアを目指す理由</h2>
      <p class="leading-relaxed text-gray-700 dark:text-gray-300 whitespace-pre-line">
        <%= @motivation %>
      </p>
    </section>

    <section class="pt-4 border-t border-accent/30">
      <h2 class="text-xl font-semibold text-accent mb-4">リンク</h2>
      <div class="flex flex-wrap gap-4 justify-center py-5">
        <a class="flex items-center gap-2 p-3 bg-white dark:bg-background-dark/50 rounded-lg shadow-md hover:bg-primary/10 dark:hover:bg-primary/20 transition-colors" href="https://x.com/charm_poppy1568">
          <svg class="h-6 w-6 text-primary" fill="currentColor" viewBox="0 0 16 16" xmlns="http://www.w3.org/2000/svg">
            <path d="M12.6.75h2.454l-5.36 6.142L16 15.25h-4.937l-3.867-5.07-4.425 5.07H.316l5.733-6.57L0 .75h5.063l3.495 4.633L12.6.75Zm-.86 13.028h1.36L4.323 2.145H2.865l8.875 11.633Z"></path>
          </svg>
          <span class="font-medium text-[#111418] dark:text-black">X (Twitter)</span>
        </a>
        <a class="flex items-center gap-2 p-3 bg-white dark:bg-background-dark/50 rounded-lg shadow-md hover:bg-primary/10 dark:hover:bg-primary/20 transition-colors" href="https://github.com/okarina-chaan">
          <svg class="h-6 w-6 text-primary" fill="currentColor" viewBox="0 0 16 16" xmlns="http://www.w3.org/2000/svg">
            <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"></path>
          </svg>
          <span class="font-medium text-[#111418] dark:text-black">GitHub</span>
        </a>
      </div>
    </section>
  </div>
</div>

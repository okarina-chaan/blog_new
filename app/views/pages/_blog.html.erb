<section id="blog" class="py-12 bg-background-light dark:bg-background-dark">
  <div class="max-w-5xl mx-auto px-4 md:px-10">
    <h2 class="text-3xl font-bold text-text-main dark:text-text-dark mb-8">最新のブログ記事</h2>

    <div class="grid gap-6 md:grid-cols-3">
      <% articles.each do |article| %>
        <%= render "shared/card",
          title: article.title,
          published_at: article.published_at,
          link: article.url %>
      <% end %>
    </div>

    <div class="text-center mt-8">
      <%= link_to "すべての記事を見る", articles_path, class: "text-primary font-bold hover:underline" %>
    </div>
  </div>
</section>

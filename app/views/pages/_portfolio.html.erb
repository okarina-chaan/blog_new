<!-- ===============================
     Portfolio Section
     DaisyUIカード＋レスポンシブ画像
     追加したいときは <div class="card"> をコピー
================================ -->
<section id="portfolio" class="py-16 md:py-24 bg-highlight/20 dark:bg-gray-900 rounded-xl">
  <h2 class="text-3xl font-bold tracking-tight text-center mb-12 text-text-light dark:text-text-dark font-display">
    最近のポートフォリオ
  </h2>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 px-6">
    <div class="card bg-base-100 shadow-lg hover:shadow-xl transition-all overflow-hidden">
      <%= image_tag "portfolio/sample-project.svg", 
          alt: "プロジェクトA",
          class: "w-full aspect-video object-cover" %>
      <div class="p-6">
        <h3 class="text-xl font-bold mb-2">プロジェクトA</h3>
        <p class="text-gray-700 dark:text-gray-300 mb-4">
          eコマースサイトのフロントエンドとバックエンド開発を担当しました。
        </p>
        <%= link_to "詳細を見る →", "#", class: "text-primary font-bold hover:underline" %>
      </div>
    </div>

    <div class="card bg-base-100 shadow-lg hover:shadow-xl transition-all overflow-hidden">
      <%= image_tag "portfolio/sample-project.svg",
          alt: "プロジェクトB",
          class: "w-full aspect-video object-cover" %>
      <div class="p-6">
        <h3 class="text-xl font-bold mb-2">プロジェクトB</h3>
        <p class="text-gray-700 dark:text-gray-300 mb-4">
          ブログプラットフォームのCMS機能を実装しました。
        </p>
        <%= link_to "詳細を見る →", "#", class: "text-primary font-bold hover:underline" %>
      </div>
    </div>

    <div class="card bg-base-100 shadow-lg hover:shadow-xl transition-all overflow-hidden">
      <%= image_tag "portfolio/sample-project.svg",
          alt: "プロジェクトC",
          class: "w-full aspect-video object-cover" %>
      <div class="p-6">
        <h3 class="text-xl font-bold mb-2">プロジェクトC</h3>
        <p class="text-gray-700 dark:text-gray-300 mb-4">
          タスク管理ツールのAPI連携機能を開発しました。
        </p>
        <%= link_to "詳細を見る →", "#", class: "text-primary font-bold hover:underline" %>
      </div>
    </div>
  </div>
</section>

